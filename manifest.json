{
	"manifest_version": 3,
	"name": "Shark Tank Company Tracker",
	"version": "1.0",
	"description": "Automatically find updates on Shark Tank companies.",
	"permissions": ["activeTab", "scripting", "storage"],
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/watch*"],
			"js": ["content.js"]
		}
	],
	"background": {
		"service_worker": "background.js"
	}
}
